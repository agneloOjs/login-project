<div class="group-form">
  <%= form_with url: pages_auth_sessions_path, method: :post, local: true, class: "login-form" do |form| %>
    <div class="input-wrapper">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, placeholder: "Enter your email", class: "form-control" %>
    </div>

    <div class="input-wrapper">
      <%= form.label :password, "Password", class: "form-label" %>
      <%= form.password_field :password, placeholder: "Enter your password", class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
