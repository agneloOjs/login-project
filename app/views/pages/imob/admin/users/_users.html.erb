
<div class="table-container">
  <table class="custom-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Email</th>
        <th>Criado em</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
        <td><%= user.code %></td>
        <td><%= user.profile&.first_name || 'Nome não disponível' %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>     
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
